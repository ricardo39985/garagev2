<% if car.errors.any? %>
  <ul>
    <% car.errors.full_messages.each do |error| %>
      <li class="red-text center"><strong><%=error%></strong></li>
    <% end %>
  </ul>
  <hr>
<% end %>
<%= form_for [current_user, car] do |f| %>
  <p>
    <b>New Car</b><br>
    <div class = "field">
    <%=f.label :model%>
    <%= f.text_field :model%>
    </div><br>

    <div class = "browser-default">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%=f.label :manufacturer%>
    <%= f.collection_select :manufacturer_id, Manufacturer.where("name IS NOT NULL & name != ''"),:id,:name,{:prompt => 'Please select Manufacturer'}, {:class => 'browser-default'} %>
    </div><br>

    <div class = "field">
    <%=f.label :year%>
    <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1),{:prompt => 'Please select year'}, {:class => 'browser-default input-field col s12'} %>
    </div><br>

  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
